{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "alwaysStrict": true,
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules"
  ],
  "plugins": [
    {
      "name": "typescript-tslint-plugin",
      "configFile": "./tslint.json",
      "suppressWhileTypeErrorsPresent": false
    }
  ]
}